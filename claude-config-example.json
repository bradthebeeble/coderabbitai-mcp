{
  "mcpServers": {
    "coderabbitai": {
      "command": "/absolute/path/to/coderabbitai-mcp/start.sh",
      "args": [],
      "cwd": "/absolute/path/to/coderabbitai-mcp",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_your_token_here",
        "CODERABBIT_LOG_LEVEL": "info"
      }
    }
  }
}

