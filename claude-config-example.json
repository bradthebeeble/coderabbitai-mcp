{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_your_token_here"
      }
    },
    "coderabbitai": {
      "command": "node",
      "args": [
        "dist/index.js"
      ],
      "cwd": "/path/to/coderabbitai-mcp",
      "env": {
        "CODERABBIT_LOG_LEVEL": "info"
      }
    }
  }
}

